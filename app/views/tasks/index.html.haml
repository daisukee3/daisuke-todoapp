.container
  .top_label
    Brackets
  - @tasks.each do |task|
    .card
      - if task.eyecatch.attached?
        .card_image
          = image_tag task.eyecatch
      - if user_signed_in? && current_user.has_task_written?(task)
        .board_detail_actions
          .dropdown
            = image_tag 'Combined Shape.svg', class: 'dropbtn'
            .dropdown-content.mini
              = link_to 'Edit', edit_task_path(task)
              = link_to 'Delete', task_path(task), data: { method: 'delete' , confirm: 'Are you sure you want to delete it?' }
        .card_content
          = link_to task_path(task) do
            .card_title
              = task.title
          .card_text
            = task.content
  = link_to new_task_path do
    .add_new
      .add_new_label + Add new task